<div class="call">
  <%= t('.name_html', name: chat.user_name, color: chat.color) %>
  <span class="content">
    <% if chat.origin? %>
      <%= t('.origin.content_html', room_name: chat.target_room.name, content: chat.content, color: chat.color) %>
    <% elsif chat.target? %>
      <%= t('.target.content_html', room_name: chat.origin_room.name, content: chat.content, color: chat.color) %>
    <% end %>
  </span>
  <time><%= chat.created_at.strftime(t('date.long')) %></time>
</div>
