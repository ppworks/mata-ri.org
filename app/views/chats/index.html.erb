<% content_for :body_class, 'chats ' %>
<% content_for :body_data_room_id, @room.id.to_s %>
<% content_for :body_data_user_id, current_user.id.to_s %>
<%= form_tag room_chats_path(@room), remote: true, id: 'new_chat' do %>
  <div>
    <%= text_field_tag :content, nil, class: 'auto_clear' %>
  </div>
  <%= submit_tag t('.send') %>
<% end %>

<%= form_tag room_participants_path(@room), method: 'delete' do %>
  <%= submit_tag t('.leave') %>
<% end %>
<ul class="member"></ul>
<%= render 'chats/chats', chats: @chats, room: @room %>
