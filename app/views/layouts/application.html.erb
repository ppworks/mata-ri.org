<!DOCTYPE html>
<html>
<head>
  <title>Zoochat</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
<% if user_signed_in? %>
  <%= link_to 'logout', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'facebook login', user_omniauth_authorize_path(:facebook) %>
<% end %>
</header>

<%= yield %>

</body>
</html>
